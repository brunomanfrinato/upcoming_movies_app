<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorGreyLight"
    card_view:cardCornerRadius="@dimen/card_radius"
    card_view:contentPadding="@dimen/activity_margin_small"
    android:foreground="?selectableItemBackground"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin_half">

        <ImageView
            android:id="@+id/image_poster_thumb"
            android:layout_width="@dimen/poster_thumb_width"
            android:layout_height="@dimen/poster_thumb_height"
            android:background="@drawable/movie_poster_thumb_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_margin_small">

            <TextView
                android:id="@+id/text_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreyDark"
                android:textStyle="bold"
                android:text="Three Billboards Outside Ebbing, Missouri"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:gravity="center">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_date_grey"
                    android:layout_marginRight="@dimen/activity_margin_small"/>

                <TextView
                    android:id="@+id/text_movie_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorGrey"
                    android:text="10/11/2017"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_movie_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:padding="@dimen/activity_margin_small"
                android:text="Comedy | Adventure | Drama"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

